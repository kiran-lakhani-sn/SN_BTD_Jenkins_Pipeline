def repoName = "kiran-lakhani-sn/SN_BTD_Jenkins_Pipeline" // Ensure after forking update the repoName accrodingly.

pipeline {
	agent any
	
	tools {
		maven 'Maven'
	}

	stages {
		stage('Build') {
			steps {
				sh 'mvn -B -DskipTests clean compile'
			}
		}

		stage('Test') {
			steps {
			  	sh 'mvn test'
				sleep(5);
			}
			post {
				always {
					junit "**/target/surefire-reports/*.xml"
				}
			}
		}

	}
}

